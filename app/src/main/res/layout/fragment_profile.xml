<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    app:cardUseCompatPadding="true">


    <ImageView
        android:id="@+id/img_view_back_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:tint="@color/md_theme_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back"
        android:contentDescription="@string/image"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_view_user"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/image"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/txt_view_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/user_name"
                android:textColor="@color/md_theme_background"
                android:textSize="@dimen/text_size_h2_22"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_bio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/padding_large_24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/md_theme_background"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewBio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/bio"
                            android:textColor="@color/md_theme_primary"
                            android:textSize="@dimen/text_size_h1_24"
                            android:textStyle="bold"
                            tools:ignore="RelativeOverlap" />

                        <ImageView
                            android:id="@+id/imgViewBioEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/image"
                            app:srcCompat="@drawable/ic_edit"
                            app:tint="@color/md_theme_primary" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_view_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/age"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/gender"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/mail"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/phone"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_birthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/birthdate"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_bloodgroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/bloodgroup"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/height"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/weight"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_eyecolor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/eyecolor"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="@dimen/padding_large_24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/address"
                            android:textColor="@color/md_theme_primary"
                            android:textSize="@dimen/text_size_h1_24"
                            android:textStyle="bold"
                            tools:ignore="RelativeOverlap" />

                        <ImageView
                            android:id="@+id/imgViewAddressEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/image"
                            app:srcCompat="@drawable/ic_edit"
                            app:tint="@color/md_theme_primary" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_view_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/address"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/city"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/state"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_university"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/university"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_company"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="@dimen/padding_large_24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/company"
                            android:textColor="@color/md_theme_primary"
                            android:textSize="@dimen/text_size_h1_24"
                            android:textStyle="bold"
                            tools:ignore="RelativeOverlap" />

                        <ImageView
                            android:id="@+id/imgViewCompanyEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/image"
                            app:srcCompat="@drawable/ic_edit"
                            app:tint="@color/md_theme_primary" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_view_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/department"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/name"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_company_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_company_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/address"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_company_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/city"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_company_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/state"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_company_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/country"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_bank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="@dimen/padding_large_24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/md_theme_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/bank"
                            android:textColor="@color/md_theme_primary"
                            android:textSize="@dimen/text_size_h1_24"
                            android:textStyle="bold"
                            tools:ignore="RelativeOverlap" />

                        <ImageView
                            android:id="@+id/imgViewBankEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/image"
                            app:srcCompat="@drawable/ic_edit"
                            app:tint="@color/md_theme_primary" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_view_bank_card_expire"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/card_expire"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_bank_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/card_number"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_bank_card_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/card_type"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_bank_currency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/currency"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />

                    <TextView
                        android:id="@+id/txt_view_bank_iban"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/iban"
                        android:textColor="@color/md_theme_onBackground"
                        android:textSize="@dimen/text_size_h4_18" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
